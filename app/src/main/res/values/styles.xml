<resources>

    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.AppCompat.Light.NoActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>
    </style>
    <style name="Toolbar" parent="ThemeOverlay.AppCompat.Dark.ActionBar" />
<!--toolbar内空间爱你标准样式-->
    <style name="toolbarStyle">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">match_parent</item>
        <item name="android:visibility">gone</item>
        <item name="android:layout_marginLeft">@dimen/normal_toolbar_margin</item>
        <item name="android:layout_marginRight">@dimen/normal_toolbar_margin</item>
        <item name="android:gravity">center</item>
        <item name="android:background">@color/colorPrimary</item>
    </style>

    <!--加粗黑色字体-->
    <style name="text_style_strong">
        <item name="android:textStyle">normal|bold</item>
        <item name="android:textSize">@dimen/normal_font_size</item>
        <item name="android:textColor">@color/black</item>
    </style>

    <!--正文-->
    <style name="text_style_normal">
        <item name="android:textSize">@dimen/normal_font_size</item>
        <item name="android:textColor">@color/text_gray</item>
    </style>

    <!--小字-->
    <style name="text_style_sub">
        <item name="android:textSize">@dimen/sub_font_size</item>
        <item name="android:textColor">@color/text_gray</item>
    </style>

</resources>
